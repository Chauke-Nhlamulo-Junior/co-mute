@model IEnumerable<CoMute.Web.Models.JoinedCarPools>

@{
    ViewBag.Title = "ViewPoolJoined";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>View Pool Joined</h2>
</div>

<br />

<div style="color:black; text-align:center; margin:0 auto;">
    Logged User : @ViewBag.UserName
</div>

<br />

<div class="poolJoined text-center">

    @if (Model != null)
    {
        <table id="gridTable" class="poolJoinedTable table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="4">
            <thead>
                <tr>
                    <th>Departure Time</th>
                    <th>Expected Arrive Time</th>
                    <th>Origin</th>
                    <th>Days Available</th>
                    <th>Destination</th>
                    <th>Available Seats</th>
                    <th>Owner/Leader Email</th>
                    <th>Owner/Leader </th>
                    <th>Joiner Email</th>
                    <th>Joined Pool Date</th>
                    <th>Notes</th>
                    <th>Option</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var poolsCreated in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.DepartureTime)</td>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.ExpectA_Time)</td>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.Origin)</td>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.DaysAvailable)</td>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.Destination)</td>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.Avail_Seats)</td>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.OwnerEmail)</td>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.Owner_Leader)</td>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.JoinerEmail)</td>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.JoinedDate)</td>
                            <td>@Html.DisplayFor(modelItem => poolsCreated.Notes)</td>
                            <td>
                                @Html.ActionLink("Join", "Home"); |
                                @Html.ActionLink("Leave", "Home");
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="text-center">NO DATA AVAILABLE!</tr>
                }
            </tbody>
        </table>
        <br />
        @*<div class="align-content-center">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("Desktop", new
                {
                    page,
                    pageSize = Model.PageSize
                }))
            </div>*@
    }
    <br />
    <div id="error" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-danger">
            <p></p>
        </div>
    </div>
    <div>
            <div style="color:red;">
                @ViewBag.Message
            </div>
    </div>
</div>




