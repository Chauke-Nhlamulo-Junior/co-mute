@model CoMute.Web.Models.CarPools

@{
    ViewBag.Title = "NewCarPool";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form id="registerNewPool">
    <h2>Register New Car Pool</h2>

    <div id="error" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-danger">
            <p></p>
        </div>
    </div>

    <div class="form-group">
        <label for="departureTime">Departure time</label>
        <input type="text" id="departureTime" class="form-control" placeholder="Departure time" required>
        @*<input type="text" id="departureTime" class="form-control" placeholder="Departure time" required autofocus>*@
    </div>

    <div class="form-group">
        <label for="expecteArrivalTime">Expected Arrival time</label>
        <input type="text" id="expecteArrivalTime" class="form-control" placeholder="Expected Arrival time" required>
    </div>

    <div class="form-group">
        <label for="origin">Origin</label>
        <input type="text" id="origin" class="form-control" placeholder="Origin" required>
    </div>

    <div class="form-group">
        <label for="daysAvailable">Days available</label>
        <input type="text" id="daysAvailable" class="form-control" placeholder="Days available">
    </div>

    <div class="form-group">
        <label for="destination">Destination</label>
        <input type="text" id="destination" class="form-control" placeholder="Destination" required>
    </div>

    <div class="form-group">
        <label for="availableSeats">Available seats</label>
        <input type="text" id="availableSeats" class="form-control" placeholder="Available seats" required>
    </div>

    <div class="form-group">
        <label for="ownerLeader">Owner/Leader</label>
        <input type="text" id="ownerLeader" class="form-control" placeholder="Owner/Leader" required>
    </div>

    <div class="form-group">
        <label for="notes">Notes</label>
        <input type="text" id="notes" class="form-control" placeholder="Notes" required>
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit" id="sign-in">Create Car Pool</button>
    </div>
</form>


